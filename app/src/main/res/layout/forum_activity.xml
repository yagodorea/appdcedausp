<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grena">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forums_name"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="@string/forums"
        android:textColor="@color/creme"
        android:textSize="20sp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        app:fabSize="normal"
        app:backgroundTint="@color/creme"
        android:tint="@color/grena"
        android:id="@+id/fabLeave"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        app:fabSize="normal"
        app:backgroundTint="@color/creme"
        android:tint="@color/grena"
        android:id="@+id/fabCreateForum"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/forums_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forum_list">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>