<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grena"
    tools:context="com.example.appdcedausp.ui.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mudaCampus"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_gravity="start|top"
        android:layout_margin="@dimen/fab_margin2"
        android:backgroundTint="@color/creme"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainRootLayout">

        <ImageView
            android:id="@+id/logoDCE"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:elevation="2dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoDCE"
            android:id="@+id/buttonsContainer"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btnmapa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/btnmapa"/>

                <ImageView
                    android:id="@+id/btnbandejao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/btnbandejao"/>

                <ImageView
                    android:id="@+id/btnlinks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/btnlinks"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btneventos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/btneventos"/>

                <ImageView
                    android:id="@+id/btnpermanencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/btnpermanencia"/>

                <ImageView
                    android:id="@+id/btnreclamacao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/btnreclamacao"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:id="@+id/googleSignInContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/creme"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/googleSignInText"
                android:text="Entrar:"/>

            <ImageView
                android:id="@+id/googleSignInButton"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:scaleType="fitStart"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/googlesign_creme"
                />


        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
